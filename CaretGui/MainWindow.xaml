<Window x:Class="CaretGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CaretGui"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Menu x:Name="Menu_Open" Height="21" VerticalAlignment="Top">
            <Button x:Name="Open" Height="21" Width="37" Content="Open" Click="Open_Click"/>
        </Menu>
        <Button x:Name="to_PNG" Content="To .PNG" HorizontalAlignment="Left" Margin="34,57,0,0" VerticalAlignment="Top" Width="75" Click="to_PNG_Click"/>
        <Label x:Name="label" Content="   Type Conversions" HorizontalAlignment="Left" Margin="10,26,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.594,0.459" Width="125"/>
        <Button x:Name="to_JPEG" Content="To .JPEG" HorizontalAlignment="Left" Margin="34,82,0,0" VerticalAlignment="Top" Width="75" Click="to_JPEG_Click"/>
        <Button x:Name="to_BMP" Content="To .BMP" HorizontalAlignment="Left" Margin="34,107,0,0" VerticalAlignment="Top" Width="75" Click="to_BMP_Click"/>
        <Button x:Name="to_TIFF" Content="To .TIFF" HorizontalAlignment="Left" Margin="34,132,0,0" VerticalAlignment="Top" Width="75" Click="to_TIFF_Click"/>
        <Button x:Name="to_WMP" Content="To .WMP" HorizontalAlignment="Left" Margin="34,157,0,0" VerticalAlignment="Top" Width="75" Click="to_WMP_Click"/>
        <Button x:Name="to_GIF" Content="To .GIF" HorizontalAlignment="Left" Margin="34,182,0,0" VerticalAlignment="Top" Width="75" Click="to_GIF_Click"/>
        <Label x:Name="Cropping" Content="    Cropping" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="176,28,0,0" RenderTransformOrigin="-0.083,0.617" Width="75"/>
        <Button x:Name="Crop" Content="Button" HorizontalAlignment="Left" Margin="191,117,0,0" VerticalAlignment="Top" Width="60" Click="Crop_Click"/>
        <Image x:Name="Current_Image" HorizontalAlignment="Left" Height="100" Margin="617,144,0,0" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="Height_Input" HorizontalAlignment="Left" Height="23" Margin="175,88,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="35"/>
        <Label x:Name="Box_Height" Content="Height" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="175,59,0,0" RenderTransformOrigin="-0.083,0.617" Width="51"/>
        <Label x:Name="Box_Width" Content="Width" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="231,59,0,0" RenderTransformOrigin="-0.083,0.617" Width="51"/>
        <TextBox x:Name="Width_Input" HorizontalAlignment="Left" Height="23" Margin="231,88,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="35"/>

        <StackPanel >
            <Image Name="ImageViewer1" Height="200" Width="200" VerticalAlignment="Top" HorizontalAlignment="Right"/>
        </StackPanel>

    </Grid>
</Window>